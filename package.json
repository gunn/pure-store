{
  "name": "pure-store",
  "version": "1.2.0",
  "description": "A tiny immutable store with type safety.",
  "main": "dist/index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/gunn/pure-store",
  "author": "Arthur Gunn",
  "license": "MIT",
  "scripts": {
    "build": "tsc --outDir dist && yarn build-esm",
    "build-esm": "tsc -m es2015 --outDir .",
    "test": "jest",
    "prepublish": "yarn test && yarn build",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)test)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "files": [
    "src",
    "dist",
    "index.js",
    "index.d.ts",
    "react.js",
    "react.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "coveralls": "^3.0.13",
    "jest": "^25.4.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "immer": "1.8.0 - 10"
  }
}
